<link rel="stylesheet" type="text/css" href="http://localhost:3000/stylesheets/myprofile.css">
<script>
    update_url="http://localhost:3000/update-post/{{user.username}}";
    delete_url="http://localhost:3000/delete-post/{{user.username}}/";
    function update_post(post_id){
        window.location=update_url+"/"+post_id;
    }
    function delete_post(post_id){
        console.log(delete_url+post_id);
        confirmation=confirm("Are you sure you want to delete this post?")
        if(confirmation==true){    
            window.location=delete_url+post_id;
        }
        else{
            location.reload();
        }
    }
</script>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <p class="write-logo">Write</p>
        <div class="nav-list">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="http://localhost:3000/home/{{user.username}}+{{ran}}">Home</a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">More
                        <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                             <li><a href="http://localhost:3000/myaccount/{{user.username}}"><img src={{user.profile_picture}} class='profile-image'>Your Posts</a></li>
                            <li><a href="http://localhost:3000/change-password/myuser/{{user.username}}">Change Password</a></li>
                            <li><a href='http://localhost:3000/login'>Logout</a></li>
                        </ul>
                        </div>
                    </li>
                </ul>
        </div>
    </nav>
    <div class="row">
        <div class="col-md-4 profile-picture-block">
             <img src={{user.profile_picture}} class="profile-picture">
        </div>
        <div class="col-md-8 profile-info">
            <h1>{{user.full_name}} ({{user.username}})</h1>
            <h1>{{user.tagline}}</h1>
            <h1>{{user.about}}</h1>
        </div>
    </div>
    <div class="row post-row">
        <div class="post-container">
                <h1>Microtales here..</h1><br/>  
                {{#each posts}}
                <div class="each-post-container">
                    <h1>{{this.title}}</h1><br/>
                    <h3>{{this.content}}</h3><br/>
                    <h4><a href="javascript:get_tag_link('{{this.tag}}');" id="tag-link">#{{this.tag}}</a> <a href="javascript:get_user_link('{{this.username}}');" id="user-link">{{this.username}}</a></h4>
                    <a href="javascript:update_post('{{this._id}}');"><button type="button" class="btn btn-dark">Edit</button></a>
                    <a href="javascript:delete_post('{{this._id}}');"><button type="button" class="btn btn-dark">Delete</button></a>
                </div>
                {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="footer-container">
            <h3>Write is a platform to express your self in fewer words. Here at write, we believe in giving wings to your poetic dreams. Cheers!</h3>
